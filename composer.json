{
    "name": "egsys-dev/doctrine-encrypt",
    "type": "library",
    "keywords": ["doctrine", "aes256", "encrypt", "decrypt"],
    "license": "MIT",
    "description": "Package encrypts and decrypts Doctrine fields through life cycle events.",

    "require": {
        "php": ">=7.1",
        "doctrine/orm": "~2.5",
        "ext-openssl": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "^7"
    },

    "autoload": {
        "psr-4": {
            "DoctrineEncrypt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DoctrineEncrypt\\Tests\\": "tests/"
        }
    },
